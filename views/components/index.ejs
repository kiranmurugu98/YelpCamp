<% layout('layout/commonpage') %>

    <div id="map" style="width: 100%; height: 400px;"></div>



    <h1>All Campground</h1>


    <% for(let c of camp ){ %>
        <div class="card mb-3">
            <div class="row">
                <%if(c.img.length){%>
                    <div class=" col-md-4"><img src="<%= c.img[0].url %> " class="card-img-top image-fluid"
                            alt="Camp Image">
                    </div>
                    <%}else {%>
                        <div class=" col-md-4"><img
                                src="https://images.unsplash.com/photo-1528892677828-8862216f3665?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80"
                                class="card-img-top image-fluid" alt="Camp Image">
                        </div>
                        <%}%>
                            <div class='col-md-8'>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= c.title %>
                                    </h5>


                                    <p class="card-text">
                                        <%= c.description %>
                                    </p>
                                    </p>

                                    <a href="/index/<%=c._id %> " class="btn btn-primary">

                                        <img src=" https://img.icons8.com/plasticine/30/000000/reading.png"/> See <%=
                                            c.title %>
                                    </a>
                                </div>
                            </div>
            </div>

        </div>
        <% } %>
